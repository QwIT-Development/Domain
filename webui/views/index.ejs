<%- include('partials/head') %>
    <main class="container mx-auto px-4 mt-8 flex-grow">
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
            <!-- Statistics Card -->
            <div class="lg:col-span-1">
                <div class="bg-domain-card rounded-lg shadow-xl border border-domain-border">
                    <div class="px-4 py-3 border-b border-domain-border">
                        <h2 class="text-xl font-semibold flex items-center gap-2">
                            <span class="material-symbols-rounded text-blue-400">monitoring</span>
                            Statistics
                        </h2>
                    </div>
                    <div class="p-4 space-y-3">
                        <div class="flex items-center gap-2 p-2 bg-gray-800/30 rounded-lg">
                            <span class="material-symbols-rounded text-green-400">memory</span>
                            <div class="flex-1">
                                <span class="text-gray-300">RAM Usage:</span>
                                <div class="text-sm text-gray-400">
                                    <span id="heapused" class="text-blue-400 font-mono">-</span> /
                                    <span id="heaptotal" class="text-blue-400 font-mono">-</span>
                                </div>
                            </div>
                        </div>

                        <div class="flex items-center gap-2 p-2 bg-gray-800/30 rounded-lg">
                            <span class="material-symbols-rounded text-cyan-400">chat_bubble</span>
                            <div class="flex-1">
                                <span class="text-gray-300">Messages Received:</span>
                                <div class="text-blue-400 font-mono" id="msgReceived">-</div>
                            </div>
                        </div>

                        <div class="flex items-center gap-2 p-2 bg-gray-800/30 rounded-lg">
                            <span class="material-symbols-rounded text-orange-400">restart_alt</span>
                            <div class="flex-1">
                                <span class="text-gray-300">Reset Count:</span>
                                <div class="text-blue-400 font-mono" id="resetCount">-</div>
                            </div>
                        </div>

                        <div class="flex items-center gap-2 p-2 bg-gray-800/30 rounded-lg">
                            <span class="material-symbols-rounded text-purple-400">group</span>
                            <div class="flex-1">
                                <span class="text-gray-300">Tracked Users:</span>
                                <div class="text-blue-400 font-mono" id="userNumber">-</div>
                            </div>
                        </div>

                        <div class="flex items-center gap-2 p-2 bg-gray-800/30 rounded-lg">
                            <span class="material-symbols-rounded text-red-400">voice_over_off</span>
                            <div class="flex-1">
                                <span class="text-gray-300">Timeout Count:</span>
                                <div class="text-blue-400 font-mono" id="muteCount">-</div>
                            </div>
                        </div>

                        <div class="flex items-center gap-2 p-2 bg-gray-800/30 rounded-lg">
                            <span class="material-symbols-rounded text-indigo-400">bedtime</span>
                            <div class="flex-1">
                                <span class="text-gray-300">Is Sleeping:</span>
                                <div class="text-blue-400 font-mono" id="isSleeping">-</div>
                            </div>
                        </div>

                        <div class="flex items-center gap-2 p-2 bg-gray-800/30 rounded-lg">
                            <span class="material-symbols-rounded text-teal-400">hub</span>
                            <div class="flex-1">
                                <span class="text-gray-300">WebSocket Clients:</span>
                                <div class="text-blue-400 font-mono" id="websocketClients">-</div>
                            </div>
                        </div>

                        <div class="flex items-center gap-2 p-2 bg-gray-800/30 rounded-lg">
                            <span class="material-symbols-rounded text-yellow-400">replay</span>
                            <div class="flex-1">
                                <span class="text-gray-300">Retry Count:</span>
                                <div class="text-blue-400 font-mono" id="retryCount">-</div>
                            </div>
                        </div>

                        <div class="flex items-center gap-2 p-2 bg-gray-800/30 rounded-lg">
                            <span class="material-symbols-rounded text-pink-400">queue</span>
                            <div class="flex-1">
                                <span class="text-gray-300">Message Queues:</span>
                                <div class="text-blue-400 font-mono" id="messageQueueCount">-</div>
                            </div>
                        </div>

                        <div class="flex items-center gap-2 p-2 bg-gray-800/30 rounded-lg">
                            <span class="material-symbols-rounded text-emerald-400">sync</span>
                            <div class="flex-1">
                                <span class="text-gray-300">Processing Tasks:</span>
                                <div class="text-blue-400 font-mono" id="processingTaskCount">-</div>
                            </div>
                        </div>

                        <div class="flex items-center gap-2 p-2 bg-gray-800/30 rounded-lg">
                            <span class="material-symbols-rounded text-blue-400">info</span>
                            <div class="flex-1">
                                <span class="text-gray-300">Version:</span>
                                <div class="text-blue-400 font-mono" id="version">-</div>
                            </div>
                        </div>

                        <div class="flex items-center gap-2 p-2 bg-gray-800/30 rounded-lg">
                            <span class="material-symbols-rounded text-violet-400">history</span>
                            <div class="flex-1">
                                <span class="text-gray-300">History Count:</span>
                                <div class="text-blue-400 font-mono" id="historyCount">-</div>
                            </div>
                        </div>

                        <a href="/banned-users" class="block">
                            <div class="flex items-center gap-2 p-2 bg-gray-800/30 hover:bg-gray-700/50 rounded-lg transition-colors cursor-pointer">
                                <span class="material-symbols-rounded text-red-500">gavel</span>
                                <div class="flex-1">
                                    <span class="text-gray-300">Banned Users</span>
                                    <div class="text-xs text-gray-400">Manage banned users</div>
                                </div>
                                <span class="material-symbols-rounded text-gray-400">arrow_forward</span>
                            </div>
                        </a>
                    </div>
                </div>
            </div>

            <!-- Logs Card -->
            <div class="lg:col-span-2">
                <div class="bg-domain-card rounded-lg shadow-xl border border-domain-border flex flex-col" style="height: 100%;">
                    <div class="px-4 py-3 border-b border-domain-border">
                        <h2 class="text-xl font-semibold flex items-center gap-2">
                            <span class="material-symbols-rounded text-orange-400">bug_report</span>
                            Logs
                        </h2>
                    </div>
                    <div class="p-4 flex-1">
                        <div id="logs" class="bg-gray-900/50 rounded-lg p-3 h-full overflow-y-auto font-mono text-sm border border-gray-700 scrollbar-thin scrollbar-thumb-gray-600 scrollbar-track-gray-800"></div>
                    </div>
                </div>
            </div>
        </div>
    </main>
<%- include('partials/footer') %>
